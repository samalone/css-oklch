{
  "name": "css-oklch",
  "displayName": "CSS OKLCH Color Preview",
  "description": "Color swatches and picker for oklch() colors in CSS, SCSS, and Less",
  "version": "0.4.0",
  "publisher": "samalone",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/samalone/css-oklch"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:less",
    "onLanguage:scss"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cssOklch.openColorPicker",
        "title": "OKLCH: Open Color Picker"
      },
      {
        "command": "cssOklch.convertSelection",
        "title": "OKLCH: Convert Selection to oklch"
      },
      {
        "command": "cssOklch.convertDocument",
        "title": "OKLCH: Convert Document to oklch"
      },
      {
        "command": "cssOklch.openContrastPanel",
        "title": "OKLCH: Open Contrast Checker"
      }
    ],
    "configuration": {
      "title": "CSS OKLCH",
      "properties": {
        "cssOklch.lightnessFormat": {
          "type": "string",
          "enum": [
            "number",
            "percentage"
          ],
          "default": "number",
          "description": "Format for the lightness component: number (0.7) or percentage (70%)"
        },
        "cssOklch.chromaFormat": {
          "type": "string",
          "enum": [
            "number",
            "percentage"
          ],
          "default": "number",
          "description": "Format for the chroma component: number (0.15) or percentage (37.5%)"
        },
        "cssOklch.hueFormat": {
          "type": "string",
          "enum": [
            "number",
            "deg"
          ],
          "default": "number",
          "description": "Format for the hue component: number (180) or with deg suffix (180deg)"
        },
        "cssOklch.alphaFormat": {
          "type": "string",
          "enum": [
            "number",
            "percentage"
          ],
          "default": "number",
          "description": "Format for the alpha component: number (0.8) or percentage (80%)"
        }
      }
    },
    "keybindings": [
      {
        "command": "cssOklch.openColorPicker",
        "key": "ctrl+alt+o",
        "mac": "alt+cmd+o",
        "when": "editorTextFocus && editorLangId =~ /css|scss|less/"
      },
      {
        "command": "cssOklch.openContrastPanel",
        "key": "ctrl+alt+shift+o",
        "mac": "alt+cmd+shift+o",
        "when": "editorTextFocus && editorLangId =~ /css|scss|less/"
      }
    ]
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --preserveWatchOutput",
    "package": "npm run check-types && node esbuild.js --production",
    "vscode:prepublish": "npm run package"
  },
  "devDependencies": {
    "@types/node": "^18.19.130",
    "@types/vscode": "^1.80.0",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.7.0"
  }
}
